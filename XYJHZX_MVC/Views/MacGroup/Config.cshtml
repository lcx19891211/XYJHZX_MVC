@{
    Layout = null;
    var GroupList = ViewBag.GroupDate;
    var TeamList = ViewBag.TeamDate;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>佛山市第二人民医院 - 血液净化中心 - @ViewBag.Title </title>

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script src="~/Scripts/jquery.jqprint-0.3.js"></script>
    <script src="/Scripts/modernizr-2.6.2.js"></script>
    <script src="/Scripts/bootstrap.js"></script>
    <script src="/Scripts/respond.js"></script>
    <script src="~/Resourse/My97DatePicker/WdatePicker.js"></script>
    <script src="~/Scripts/judge.js"></script>
    <script src="http://www.jq22.com/jquery/jquery-migrate-1.2.1.min.js"></script>

</head>
<body style="background-color:#99CCFF;">
    <style type="text/css">
        ul li {
            list-style: none;
            padding: 0; /* 将默认的内边距去掉 */
            margin: 2px 8px 2px 2px; /* 将默认的外边距去掉 */
            float: left; /* 往左浮动 */
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#6699CC">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:30px;color:#FFFFFF;">血液净化中心</div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:20px;color:#FFFFFF;" href="/MacGroup/Config">区域维护</a></li>
                    <li><a class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:20px;color:#FFFFFF;" href="/Patient/PatientManage">病人维护</a></li>
                    <li><a class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:20px;color:#FFFFFF;" href="/Schedul/SchedulConfig">检查排队</a></li>
                    <li><a class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:20px;color:#FFFFFF;" href="/CurrentSchedul/CurrentManage">视图管理</a></li>
                    <li><a class="navbar-brand" style="font-family:'Microsoft YaHei UI';font-size:20px;color:#FFFFFF;" href="/Schedul/SchedulExplorer" target="_blank">表格打印</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div style="clear:both;"></div>
    <div class="container body-content" style="background-color:#99CCFF;">
        <script type="text/javascript">
            function Redirect() {

                window.location.href = '/MacGroup/Config/' + $("#DropDownGroupList option:selected").val() + '/' + $("#DropDownTeamList option:selected").val();
            }
        </script>

        <h2>@ViewBag.Title</h2>
        <h3>分组维护</h3>
        <div class="GroupView" style="overflow:scroll;width:800px;height:400px;">@{Html.RenderAction("GetGroup");}</div>
        <div>
            <h3>分区维护 - </h3> @Html.DropDownList("DropDownGroupList", GroupList as List<SelectListItem>
, new { @ID = "DropDownGroupList", @class = "form-control", @style = "width:180px; margin:2mm 0cm 3mm 0cm;", @onchange = "Redirect()" })
        </div>
        <div class="TeamView" style="overflow:scroll;width:800px;height:400px;">@{Html.RenderAction("GetTeam");}</div>
        <div>
            <h3>机位维护</h3>@Html.DropDownList("DropDownTeamList", TeamList as List<SelectListItem>
, new { @ID = "DropDownTeamList", @class = "form-control", @style = "width:180px; margin:2mm 0cm 3mm 0cm;", @onchange = "Redirect()" })
        </div>
        <div class="MachineView" style="overflow:scroll;width:800px;height:400px;">@{Html.RenderAction("GetMachine");}</div>

        <div style="clear:both;"></div>

        <br />
        <hr />
        <div class="clearfix">
            <footer>
                <p>&copy; @DateTime.Now.Year - 佛山市第二人民医院</p>
            </footer>
        </div>
    </div>

</body>
</html>