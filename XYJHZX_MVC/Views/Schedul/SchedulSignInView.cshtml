@{
    Layout = null;
    var Keyid = "SchedulSignInViews";
    List<List<XYJHZX_MVC.Models.SchedulPrint>> Dates = ViewBag.SchedulDate;
}

@if (Dates != null)
{
    <table id="@(Keyid)" class="table table-striped table-bordered" style="font-size:28px;font-weight:bolder;font-family:'SimHei';">

        @for (int i = 0; i < Dates.Count; i += 2)
        {
        <tr>
            <td colspan="4" style="width:360px;">@Dates[i][0].TeamDescption</td>
            @if (Dates.Count > 1)
            {
                <td colspan="4" style="width:360px;">@((i + 1 < Dates.Count) ? Dates[i + 1][0].TeamDescption : "")</td>
            }
        </tr>
            <tr>
                <td style="width:80px;">机号</td>
                <td style="width:80px;">姓名</td>
                <td style="width:120px;">签到时间</td>
                <td style="width:80px;">排序</td>
                @if (Dates.Count > 1)
                {
                    <td style="width:80px;">机号</td>
                    <td style="width:80px;">姓名</td>
                    <td style="width:120px;">签到时间</td>
                    <td style="width:80px;">排序</td>
                }
            </tr>
            for (int j = 0; j < ((i + 1 < Dates.Count) ? (Dates[i].Count >= Dates[i + 1].Count ? Dates[i].Count : Dates[i + 1].Count) : Dates[i].Count); j++)
            {
                <tr>
                    <td>@(j < Dates[i].Count ? Dates[i][j].MacName : "")</td>
                    <td>@(j < Dates[i].Count ? Dates[i][j].PatName : "")</td>
                    <td>@(j < Dates[i].Count ? Dates[i][j].SigninDate : "")</td>
                    <td>@(j < Dates[i].Count ? ((Dates[i][j].SignInSeq == 0) ? "" : Dates[i][j].SignInSeq.ToString()) : "" )</td>
                    @if (i + 1 < Dates.Count)
                    {
                        <td>@(j < Dates[i + 1].Count ? Dates[i + 1][j].MacName : "")</td>
                        <td>@(j < Dates[i + 1].Count ? Dates[i + 1][j].PatName : "")</td>
                        <td>@(j < Dates[i + 1].Count ? Dates[i + 1][j].SigninDate : "")</td>
                        <td>@(j < Dates[i + 1].Count ? ((Dates[i + 1][j].SignInSeq == 0 ) ? "":Dates[i + 1][j].SignInSeq.ToString()) : "" )</td>
                    }
                    else
                    {
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    }
                </tr>
            }
        }
    </table>
}
